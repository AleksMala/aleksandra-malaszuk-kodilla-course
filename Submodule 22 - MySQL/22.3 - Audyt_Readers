CREATE TABLE READERS_AUD(
EVENT_ID INT(11) NOT NULL AUTO_INCREMENT,
EVENT_DATE DATETIME NOT NULL,
EVENT_TYPE VARCHAR(50) DEFAULT NULL,
READERS_ID INT(11) NOT NULL,
OLD_READER_ID INT(11),
NEW_READER_ID INT(11),
FIRSTNAME VARCHAR(50),
LASTNAME VARCHAR(50),
PESELID INT(20),
NEW_VIP_LEVEL VARCHAR(50),
OLD_VIP_LEVEL VARCHAR(50),
PRIMARY KEY (EVENT_ID)
);


DROP TRIGGER IF EXISTS READERS_INSERT;

DELIMITER $$

CREATE TRIGGER READERS_INSERT AFTER INSERT ON READERS
FOR EACH ROW
BEGIN

	INSERT INTO READERS_AUD (EVENT_DATE, EVENT_TYPE, READERS_ID, NEW_READER_ID, FIRSTNAME, LASTNAME, PESELID,
    NEW_VIP_LEVEL)
    VALUES (CURTIME(), "INSERT", READERS_ID, NEW.READER_ID, NEW.FIRSTNAME, NEW.LASTNAME, NEW.PESELID,
    NEW.VIP_LEVEL);
END $$

DELIMITER ;


DROP TRIGGER IF EXISTS READERS_DELETE;
DELIMITER $$

CREATE TRIGGER READERS_DELETE AFTER DELETE ON READERS
FOR EACH ROW
BEGIN
	INSERT INTO READERS_AUD (EVENT_DATE, EVENT_TYPE, READERS_ID)
    VALUES (CURTIME(), "DELETE", READERS_ID);
END $$

DELIMITER ;


DELIMITER $$

CREATE TRIGGER READERS_UPDATE AFTER UPDATE ON READERS
FOR EACH ROW
BEGIN
	INSERT INTO READERS_AUD (EVENT_DATE, EVENT_TYPE, READERS_ID, NEW_READER_ID, FIRSTNAME,
	LASTNAME, PESELID, NEW_VIP_LEVEL)
    VALUES (CURTIME(), "UPDATE", READERS_ID, NEW,READER_ID, FIRSTNAME, LASTNAME, PESELID, NEW.VIP_LEVEL,
	OLD.READER_ID, FIRSTNAME, LASTNAME, PESELID, OLD.VIP_LEVEL);

END $$

DELIMITER ;