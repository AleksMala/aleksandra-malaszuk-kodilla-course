DROP FUNCTION IF EXISTS NameUser;

DELIMITER $$

CREATE FUNCTION NameUser(iduser INT) RETURNS VARCHAR(20) DETERMINISTIC
BEGIN
	DECLARE reader VARCHAR(20);
	IF iduser THEN
		SET reader = (SELECT FIRSTNAME, LASTNAME FROM readers WHERE READER_ID = iduser);
	ELSEIF iduser <= 0 OR iduser IS NULL THEN
		SET reader = "No user name with given id";
	END IF;
    RETURN reader;
END $$

DELIMITER ;

SELECT NameUser(4) AS NAME;

